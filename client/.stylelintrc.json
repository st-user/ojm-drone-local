{
    "extends": "stylelint-config-sass-guidelines",
    "plugins": [
        "stylelint-no-unsupported-browser-features"
    ],
    "rules": {
        "indentation": 4,
        "max-nesting-depth": 2,
        "scss/percent-placeholder-pattern": "^[0-9a-z\\-_]+$",
        "plugin/no-unsupported-browser-features": [true]
    }
  }
  